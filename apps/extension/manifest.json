{
    "manifest_version": 3,
    "name": "Colorful Twitter",
    "version": "1.0",
    "description": "Color-tag Tweets",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "run_at": "document_end",
            "all_frames": true,
            "matches": [
                "*://*.twitter.com/*"
            ],
            "css": [
                "style/content.css"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ]
}